<h1>Sign up</h1>

<% if @user.errors.any? %>
	<% @user.errors.delete(:password_digest) %>
<% end %>

<%= form_for @user do |form| %>
	<%= render form %>

	<%= hidden_field_tag :dirty_time_zone %>

	<%= form.submit 'Sign up' %>
<% end %>

<script>
	$(document).ready(function() {
		$("#dirty_time_zone").set_timezone();
	});
</script>