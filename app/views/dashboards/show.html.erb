	<p>
		<%= label_tag :query, 'Search' %>
		<%= text_field_tag :query, params[:query] %>
	</p>

	<%= submit_tag 'Search' %>
<% end %>

<ul>
	<%= render @contacts %>
</ul>

<%= render partial: 'search/results', locals: { :activities => @activities } %>